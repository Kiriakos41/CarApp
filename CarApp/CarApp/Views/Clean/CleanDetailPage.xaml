<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarApp.Views.CleanDetailPage"
             Title="Λεπτομέρειες Καθαριότητας"
             Shell.ForegroundColor="Transparent">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="Update" Command="{Binding UpdateCommand}"/>
        <ToolbarItem IconImageSource="Delete" Command="{Binding DeleteCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Frame>
                <StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="25" HorizontalOptions="Center">
                        <Image Source="cleaning" HeightRequest="40"/>
                        <Picker ItemsSource="{Binding Rating}" SelectedItem="{Binding Quality, Mode=TwoWay}" WidthRequest="250"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="25" HorizontalOptions="Center">
                        <Image Source="money" HeightRequest="40"/>
                        <Entry Text="{Binding Price, Mode=TwoWay}" WidthRequest="250"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>