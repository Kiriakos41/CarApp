<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarApp.Views.ServiceDetailPage"
             Title="Λεπτομέρειες Service"
             xmlns:lv="clr-namespace:Xamarin.Forms.MultiSelectListView;assembly=Xamarin.Forms.MultiSelectListView" Padding="0,20,0,0">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Αποθήκευση" Command="{Binding UpdateCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Frame Margin="5,10,15,5">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="money" HeightRequest="30"/>
                        <Label Text="Τιμή αλλαγών:" VerticalOptions="Center" FontSize="Medium" />
                    </StackLayout>
                    <Entry Text="{Binding Price}" Placeholder="Γράψε εδώ"/>
                </StackLayout>
            </Frame>
            <StackLayout>
                <StackLayout IsVisible="{Binding ShowSecond}">
                    <BoxView BackgroundColor="Gainsboro" ScaleY="0.01"/>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="15">
                        <Image Source="change" HeightRequest="30" HorizontalOptions="Start"/>
                        <Label Text="Αλλαγές που έγιναν:" HorizontalOptions="Center" FontSize="Medium" TextColor="Black"/>
                    </StackLayout>
                    <CollectionView ItemsSource="{Binding SelectedItems}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="2"
                                             VerticalItemSpacing="15"
                                         HorizontalItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Label Text="{Binding}" TextColor="Black" FontSize="Default"  HorizontalOptions="Center"/>
                                    <BoxView BackgroundColor="Gainsboro" HeightRequest="1"/>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                <StackLayout IsVisible="{Binding Show}">
                    <CollectionView ItemsSource="{Binding services}" SelectionMode="Multiple" SelectedItems="{Binding SelectedServices, Mode=TwoWay}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical"
                                             Span="2"
                                             VerticalItemSpacing="15"
                                         HorizontalItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <StackLayout>
                                        <Label Text="{Binding}" TextColor="Black" FontSize="Default" HorizontalTextAlignment="Center"/>
                                    </StackLayout>
                                    <BoxView BackgroundColor="Gainsboro" HeightRequest="1"/>
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="15" Spacing="25">
                    <Button Text="Επεξεργασία Λίστας" Command="{Binding PopUp}" BackgroundColor="Green"/>
                    <Button Text="Διαγραφή Service" Command="{Binding DeleteCommand}" BackgroundColor="Red"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>